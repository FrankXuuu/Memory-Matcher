<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?colorAccent"
    tools:context=".ui.view.MainActivity">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="?app_title"
        android:contentDescription="@string/letters_description"

        app:layout_constraintTop_toBottomOf="@id/guideline20"
        app:layout_constraintLeft_toRightOf="@id/guideline28"
        app:layout_constraintRight_toLeftOf="@id/guideline72"/>

    <ImageButton
        android:id="@+id/play_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/play"
        android:contentDescription="@string/play_description"

        app:layout_constraintRight_toLeftOf="@id/guideline45"
        app:layout_constraintTop_toBottomOf="@id/guideline50h"
        style="@style/PrimaryButton"/>

    <ImageButton
        android:id="@+id/settings_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/cog"
        android:contentDescription="@string/settings_description"

        app:layout_constraintLeft_toRightOf="@id/guideline55"
        app:layout_constraintTop_toBottomOf="@id/guideline50h"
        style="@style/PrimaryButton"/>

    <ImageButton
        android:id="@+id/shopify_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_shopify_glyph"
        android:contentDescription="@string/shopify_description"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/CornerButton" />

    <ImageButton
        android:id="@+id/scores_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/star"
        android:contentDescription="@string/scores_description"

        app:layout_constraintRight_toLeftOf="@id/bright_button"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/CornerButton"/>

    <ImageButton
        android:id="@+id/bright_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bright"
        android:contentDescription="@string/bright_description"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/CornerButton"/>

    <android.support.constraint.Guideline
        android:id="@+id/guideline20"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.20"/>

    <android.support.constraint.Guideline
        android:id="@+id/guideline50h"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.55"/>

    <android.support.constraint.Guideline
        android:id="@+id/guideline28"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.24"/>

    <android.support.constraint.Guideline
        android:id="@+id/guideline45"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.45"/>

    <android.support.constraint.Guideline
        android:id="@+id/guideline55"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.55"/>

    <android.support.constraint.Guideline
        android:id="@+id/guideline72"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.76"/>

</android.support.constraint.ConstraintLayout>
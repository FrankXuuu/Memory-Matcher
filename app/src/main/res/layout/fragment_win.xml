<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?colorPrimary"
    android:padding="32dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/win_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/win_message"
        android:textSize="40sp"
        android:textColor="?colorAccent"
        android:fontFamily="@font/lobster"

        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/score_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/win_message"
        android:layout_marginBottom="16dp"
        android:textSize="20sp"
        android:textColor="?colorAccent"
        android:fontFamily="@font/lobster"

        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:id="@+id/close_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/close"
        android:contentDescription="@string/close_description"
        android:background="@drawable/accent_rounded"
        android:elevation="3dp"

        android:layout_below="@id/score_message"
        android:layout_toStartOf="@id/mid"
        android:layout_marginEnd="16dp"/>

    <View
        android:id="@+id/mid"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:id="@+id/reset_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/reset"
        android:contentDescription="@string/close_description"
        android:background="@drawable/accent_rounded"
        android:elevation="3dp"

        android:layout_below="@id/score_message"
        android:layout_toEndOf="@id/mid"
        android:layout_marginStart="16dp"/>

</RelativeLayout>